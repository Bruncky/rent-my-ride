<div class="container">
  <div class="row">
    <% @cars.each do |car| %>
        <div class="col-lg-3 col-md-6 col-12 py-3">
            <div class="card rounded" style="background-color: rgba(245, 245, 245, 0.5)">
                <%= cl_image_tag car.photo, class: "card-img-top" %>
                    <div class="card-body" ><%= car.model %>
                        <%= link_to "", car_path(car), class: "fas fa-info-circle" %>
                    </div>
            </div>
        </div>
    <% end %>
  </div>
</div>
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
