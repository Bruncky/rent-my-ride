<style>body{
  height: 100%;
  background-image: url("https://res.cloudinary.com/dbqegklxb/image/upload/v1582630446/Website%20Assets/landingbackground_eqxmxr.jpg");
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
}</style>
<%= content_for(:after_js) do %>
  <%= javascript_pack_tag "search.js" %>
<% end %>
<div class="container mt-5" style="margin: auto;">
   <% flash.each do |type, msg| %>
      <div class="alert alert-info">
        <%= msg %>
      </div>
   <% end %>
    <img src="https://res.cloudinary.com/dbqegklxb/image/upload/v1582629687/Website%20Assets/navlogo_fvms1n.png" alt="rent my ride logo" class="w-100">
    <form>
        <div class="form-row m-auto">
                <div class="col-lg-10 col-8">
                    <input type="text" class="form-control" placeholder="Find cars in your area" id="location-input">
                </div>
                <div class="col-lg-2 col-4 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary" id="submit-button">Find Cars</button>
                </div>
        </div>
      </div>
    </form>
    <div class="container text-center mt-5">
    <h2>Rent the car of your dreams to go for the ride of your life</h2>
    </div>
    <div class="coordinates"></div>
</div>
