<div class="py-5 container">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, class: "col-md-6 col-6" %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, class: "col-md-6 col-6" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary my-4" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
