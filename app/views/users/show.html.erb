<div class="container mt-3">
  <h2>Your Bookings</h2>
  <div class="row">
    <% if current_user.bookings[0].nil? %>
    <div class="alert alert-warning">
      <p>You have no bookings yet</p>
    </div>
<% else %>
 <div class="row">
<% current_user.bookings.each do |booking| %>
<div class="bg-light rounded w-100 d-flex p-3 mt-3" style="background-color: rgba(245, 245, 245, 0.5)">

      <%= cl_image_tag booking.car.thumbnail.key, height: 200, class: "align-self-center"%>

    <div class="card-body">
                      <ul style="list-style: none">
                      <li><strong>Model: </strong><%= booking.car.model %></li>
                      <br>
                      <li><strong>Location: </strong><%= booking.car.location %></li>
                      <br>
                      <li><strong>Price Per Day: </strong><%= booking.car.price %>â‚¬</li>
                      <br>
                      <li><strong>Booked for :</strong> </li>
                      <li><strong><%= booking.start_date %> - <%= booking.end_date %></strong></li>
                    </div>
                    <div class="row">
                        <p class="cardescription"><strong>Description: </strong>"<%= booking.car.description %>"</p>
                      </div>
    <div class="row">
    <%= link_to "", booking_path(booking), method: :delete, class: "fas fa-ban card-remove-link col-1" %>
    </div>
    </div>
  </div>
</div>
  <% end %>
  <% end %>
  </div>
</div>
</div>
<%= content_for(:after_js) do %>
  <%= javascript_pack_tag "sweetalert_delete_booking.js" %>
<% end %>

