<div class="container py-3">
<p>All your cars</p>
</div>

<div class="container">
  <div class="row">
    <% @cars.each do |car| %>
        <div class="col-lg-3 col-md-6 col-12 py-3">
            <div class="card rounded" style="background-color: rgba(245, 245, 245, 0.5)">
                <%= cl_image_tag car.thumbnail.key, class: "card-img-top" %>
                <%= link_to "+", owner_car_path(car), method: :delete, class: "card-remove-link" %>
                    <div class="card-body">
                      <ul style="list-style: none">
                      <li><strong>Model: </strong><%= car.model %></li>
                      <br>
                      <li><strong>Location: </strong><%= car.location %></li>
                      <br>
                      <li><strong>Price Per Day: </strong><%= car.price %></li>
                      <br>
                      <li><strong>Description: </strong>"<%= car.description %></li>
                      <br>
                      <li><strong>Horsepower: </strong><%= car.horsepower %></li>
                      </ul>
                      <%= link_to "", edit_owner_car_path(car), class: "fas fa-edit" %>
                    </div>
            </div>
        </div>
    <% end %>
  </div>
<%= link_to "Add a car", new_car_path, class: "btn btn-primary" %>
</div>
