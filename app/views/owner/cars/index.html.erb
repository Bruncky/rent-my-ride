<h1>All my Cars</h1>

<ul style="list-style: none">
  <% @cars.each do |car| %>
    <li><%= cl_image_tag car.photo.key, width: 400, height: 300, crop: :fill %></li>
    <li><%= car.model %></li>
    <li><%= car.location %></li>
    <li><%= car.price %></li>
    <li><%= car.description %></li>
    <li><%= car.horsepower %></li>
    <% end %>
</ul>

<%= link_to "Add a car", new_car_path, class: "btn btn-info" %>
